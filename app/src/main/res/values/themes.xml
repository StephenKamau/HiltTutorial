<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HiltTutorial" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!--Font-->
        <item name="fontFamily">@font/roboto</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey700</item>
        <item name="colorPrimaryVariant">@color/grey900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green800</item>
        <item name="colorSecondaryVariant">@color/green900</item>
        <item name="colorOnSecondary">@color/white</item>
        <!--Surface color-->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/grey900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/grey900</item>
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>
</resources>